<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">


        <!-- First LinearLayout (First Column) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">


            <!-- Symbol -->
            <TextView
                android:id="@+id/PortsymbolTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Symbol"
                android:layout_marginBottom="8dp" />


            <!-- Total Shares -->
            <TextView
                android:id="@+id/TotalSharesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Shares" />
        </LinearLayout>


        <!-- Second LinearLayout (Second Column) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="end"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">


            <!-- Price -->
            <TextView
                android:id="@+id/PortpriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Price"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">
                <ImageView
                   android:id="@+id/PortarrowImageView"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:visibility="visible" />

                   <!-- Price Change -->
            <TextView
                android:id="@+id/PortpriceChangeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price Change" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical|end">


            <!-- ImageButton -->
            <ImageButton
                android:id="@+id/rightarrowportbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow"
                android:background="@android:color/transparent"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>




    </LinearLayout>


</androidx.cardview.widget.CardView>

