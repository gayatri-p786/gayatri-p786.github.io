<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="16dp"
    android:padding="20dp"
    android:elevation="4dp"
    android:background="@drawable/dialog_rounded_green">

    <TextView
        android:id="@+id/congratulationsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations!"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/congratulationsMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="italic"
        android:text=""
    android:textColor="@android:color/white"
    android:layout_below="@id/congratulationsTextView"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="16dp"
    android:width="350dp"
    android:gravity="center"
    android:maxLines="3"
    android:ellipsize="end"/> <!-- Add ellipsis if text exceeds 3 lines -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_below="@id/congratulationsMessageTextView"
    android:gravity="center_horizontal"
    android:weightSum="4"> <!-- Dividing the width into 4 equal parts -->

    <android.widget.Button
        android:id="@+id/doneButton"
        android:layout_width="0dp"
        android:theme="@style/ButtonStyle"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Done"
        android:background="@drawable/rounded_button_white"
        android:textColor="@color/modal_green"
        android:layout_marginTop="16dp" /> <!-- Added margin top to Done button -->

</LinearLayout>

    </RelativeLayout>
