
    <!-- bg_cell_with_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Background color -->
<item>
    <shape android:shape="rectangle">
        <solid android:color="#E0E0E0"/> <!-- Background color -->
    </shape>
</item>
<!-- Border -->
<item>
    <shape android:shape="rectangle">
        <stroke
            android:width="1dp"
            android:color="#FFFFFF"/> <!-- Border color -->
    </shape>
</item>
</layer-list>

